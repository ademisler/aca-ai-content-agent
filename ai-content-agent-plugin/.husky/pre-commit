#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run type checking
echo "ğŸ“ Type checking..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript type checking failed. Please fix the errors and try again."
  exit 1
fi

# Run linting
echo "ğŸ”§ Linting..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ ESLint found issues. Please fix them and try again."
  exit 1
fi

# Check formatting
echo "ğŸ’… Checking formatting..."
npm run format:check
if [ $? -ne 0 ]; then
  echo "âŒ Code formatting issues found. Running prettier..."
  npm run format
  echo "âœ… Code has been formatted. Please add the changes and commit again."
  exit 1
fi

# Run staged file linting
echo "ğŸ¯ Linting staged files..."
npx lint-staged
if [ $? -ne 0 ]; then
  echo "âŒ Staged file linting failed."
  exit 1
fi

echo "âœ… All pre-commit checks passed!"