#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run type checking
echo "📝 Type checking..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "❌ TypeScript type checking failed. Please fix the errors and try again."
  exit 1
fi

# Run linting
echo "🔧 Linting..."
npm run lint
if [ $? -ne 0 ]; then
  echo "❌ ESLint found issues. Please fix them and try again."
  exit 1
fi

# Check formatting
echo "💅 Checking formatting..."
npm run format:check
if [ $? -ne 0 ]; then
  echo "❌ Code formatting issues found. Running prettier..."
  npm run format
  echo "✅ Code has been formatted. Please add the changes and commit again."
  exit 1
fi

# Run staged file linting
echo "🎯 Linting staged files..."
npx lint-staged
if [ $? -ne 0 ]; then
  echo "❌ Staged file linting failed."
  exit 1
fi

echo "✅ All pre-commit checks passed!"